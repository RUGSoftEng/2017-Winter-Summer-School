<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="nl.rug.www.rugsummerschools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/RugTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <service android:name=".networking.FCMIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service android:name=".networking.FCMService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="@string/fb_login_protocol_scheme"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/RugTheme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/RugTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".controller.announcement.AnnouncementPagerActivity"
            android:parentActivityName=".controller.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".controller.generalinfo.GeneralInfoPagerActivity"
            android:parentActivityName=".controller.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".controller.lecturer.LecturerPagerActivity"
            android:parentActivityName=".controller.MainActivity"
            android:screenOrientation="portrait"/>
        <!--
        <activity
            android:name=".controller.MainPagerActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
            !
        -->
        <activity
            android:name=".controller.forum.ThreadActivity"
            android:parentActivityName=".controller.MainActivity">
        </activity>
        <activity
            android:name=".controller.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/RugTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".controller.lecturer.LecturerScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:parentActivityName=".controller.MainActivity"
            android:theme="@style/RugTheme.NoActionBar">
        </activity>
        <activity
            android:name=".controller.generalinfo.GeneralInfoScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:parentActivityName=".controller.MainActivity"
            android:theme="@style/RugTheme.NoActionBar">
        </activity>
        <activity android:name=".controller.forum.ForumThreadDetailActivity">
        </activity>
    </application>

</manifest>